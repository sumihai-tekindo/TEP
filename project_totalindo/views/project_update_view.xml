<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_task_update_form" model="ir.ui.view">
			<field name="name">project.task.update.form</field>
			<field name="model">project.task.update</field>
			<field name="arch" type="xml">
				<form string="Welcome">
					<header>
						<button name="action_approve" string="Approve" type="object"
							states="draft" class="oe_highlight" groups="project.group_project_manager" />
						<field name="state" widget="statusbar" statusbar_visible="draft,open"
							readonly="1" />
					</header>
					<sheet>
						<group>
							<group>
								<field name="sacme_id" options="{'no_quick_create':1,'no_create_edit':1}" />
								<field name="task_id"
									domain="[('project_id','=',sacme_id),('stage_id.done','=',False)]"
									attrs="{'invisible': [('sacme_id','=',False)]}" options="{'no_quick_create':1,'no_create_edit':1}" />
								<field name="stage_id" widget="selection" />
								<!-- <field name="attachement" /> -->
							</group>
							<group>
								<field name="date" />
								<field name="date_approved" />
							</group>
						</group>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>

		<record id="view_task_update_tree" model="ir.ui.view">
			<field name="name">project.task.update.tree</field>
			<field name="model">project.task.update</field>
			<field name="arch" type="xml">
				<tree toolbar="1" colors="blue:state=='draft'">
					<field name="sacme_id" />
					<field name="task_id" />
					<field name="stage_id" />
					<field name="date" />
					<field name="date_approved" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<record id="action_task_update_form" model="ir.actions.act_window">
			<field name="name">Sacme Progress</field>
			<field name="res_model">project.task.update</field>
			<field name="view_mode">tree,form</field>
			<field name="view_type">form</field>
		</record>

		<menuitem string="Update Sacme Progress" id="sacme_progress_menu"
			parent="project.menu_project_management" action="action_task_update_form"
			sequence="20" />

		<!-- FO progress -->
		<record id="view_fo_update_form2" model="ir.ui.view">
			<field name="name">project.project.form</field>
			<field name="model">project.project</field>
			<field name="arch" type="xml">
				<form string="Welcome">
					<header>
						<button name="action_approve" string="Approve" type="object"
							states="draft" class="oe_highlight" groups="project.group_project_manager" />
						<button name="action_cancel" string="Cancel" type="object"
							states="open" groups="project.group_project_manager" />
						<button name="action_set_draft" string="Set Draft" type="object"
							states="cancelled" groups="project.group_project_manager" />
						<field name="state" widget="statusbar" readonly="1"
							statusbar_visible="draft,open" />
					</header>
					<sheet>
						<div class="oe_title">
							<h1>
								<field name="name" string="Project Name" readonly="1" />
							</h1>
						</div>
						<group>
							<group>
								<field name="segment_id" domain="[('geo_type','=','line')]"
									required="1" options="{'no_quick_create':1,'no_create_edit':1}"
									readonly="0" />
								<field name="parent_id" invisible="1" />
								<field name="date_progress" />
								<field name="progress_type" />
								<field name="progress_meter"
									attrs="{'invisible': [('progress_type','=','jointing')]}" />
							</group>
							<group></group>
						</group>
						<group>
							<group attrs="{'invisible': [('progress_type','=','jointing')]}">
								<field name="geo_line_ids" nolabel="1">
									<tree editable="bottom">
										<field name="latitude" />
										<field name="longitude" />
									</tree>
								</field>
							</group>
							<group attrs="{'invisible': [('progress_type','!=','jointing')]}">
								<group>
									<field name="y_point_write" />
								</group>
								<group>
									<field name="x_point_write" />
								</group>
							</group>
						</group>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>

		<record id="view_fo_update_tree2" model="ir.ui.view">
			<field name="name">project.project.tree</field>
			<field name="model">project.project</field>
			<field name="arch" type="xml">
				<tree toolbar="1" colors="blue:state=='draft'">
					<field name="segment_id" />
					<field name="date_progress" />
					<field name="progress_meter" />
					<field name="progress_type" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<record id="action_fo_update_form2" model="ir.actions.act_window">
			<field name="name">FO Progress</field>
			<field name="res_model">project.project</field>
			<field name="view_mode">tree,form</field>
			<field name="view_type">form</field>
			<field name="domain">[('account_class','=',False)]</field>
			<field name="context">{'default_state': 'draft', 'default_name': '/'}
			</field>
		</record>

		<record id="action_invoice_hg_view1" model="ir.actions.act_window.view">
			<field eval="1" name="sequence" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_fo_update_tree2" />
			<field name="act_window_id" ref="action_fo_update_form2" />
		</record>

		<record id="action_invoice_hg_view2" model="ir.actions.act_window.view">
			<field eval="1" name="sequence" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_fo_update_form2" />
			<field name="act_window_id" ref="action_fo_update_form2" />
		</record>

		<menuitem string="Update Sacme Progress" id="fo_progress_menu2"
			parent="project.menu_project_management" action="action_fo_update_form2"
			sequence="40" />
	</data>
</odoo>
