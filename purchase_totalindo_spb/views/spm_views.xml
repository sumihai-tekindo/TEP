<odoo>
    <data>
        <record model="ir.ui.view" id="spm_form_inherit">
            <field name="name">spm.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <field name="backorder_id" position="after">
                    <field name="project_id" attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                </field>
                <div groups="stock.group_tracking_owner" position="after" >
                    <field name="type_spm" attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                    <field name="no_polisi" attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                </div>
            </field>
        </record>
        <record model="ir.ui.view" id="spmline_form_inherit">
            <field name="name">spmline.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='pack_operation_product_ids']/tree/field[@name='product_id']" position="after">
                    <field name="deskripsi" />
                    <field name="keterangan" />
                    <field name="kondisi"/>
                </xpath>
            </field>
        </record>       
    </data>
</odoo>