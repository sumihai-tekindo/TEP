<odoo>
    <data>

        <record model="ir.ui.view" id="stock_picking_form_inherit">
            <field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">

                <!-- ini untuk form internal transfer -->
                <field name="location_id" position="before">
                    <field name="type_bon" invisible="1"/>
                    <field name="spb_id" attrs="{'invisible': [('picking_type_code', '!=', 'internal')]}"/>
                </field>
                <!-- internal transfer -->

                <!-- ini untuk form receipt/SPM -->
                <field name="backorder_id" position="after">
                    <field name="project_id" string="Project"/>
                </field>
                <xpath expr="//sheet/group/group/div" position="after">
                    <field name="type_spm" attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                    <field name="no_polisi" attrs="{'invisible': ['|',('picking_type_code', '!=', 'incoming'),('picking_type_code', '!=', 'internal')]}"/>
                    <field name="type_bok" attrs="{'invisible': [('type_bon', '!=', 'out')]}"/>
                    <field name="penerima" attrs="{'invisible': [('type_bon', '!=', 'out')]}"/>
                    <field name="user" attrs="{'invisible': [('type_bon', '!=', 'out')]}"/>
                    <field name="department" attrs="{'invisible': [('type_bon', '!=', 'out')]}"/>
                </xpath>
                <!-- SPM -->

            </field>
        </record>

        <record model="ir.ui.view" id="spmline_form_inherit">
            <field name="name">spmline.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='pack_operation_product_ids']/tree/field[@name='product_id']" position="after">
                    <field name="deskripsi" />
                    <field name="keterangan" />
                    <field name="kondisi"/>
                </xpath>
            </field>
        </record>

        <!-- ini inherit listing surat jalan / internal transfer -->
        <record id="vpicktree_inherit" model="ir.ui.view">
            <field name="name">stock.picking.tree</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree" />
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='picking_type_id']" position="after">
                    <field name="type_bon" invisible="1"/>
                    <field name="picking_type_code" invisible="1"/>
                    <field name="project_id" string="Project" attrs="{'invisible': [('picking_type_code', '!=', 'internal'),('type_bon', '=', 'in,out')]}"/>
                </xpath>
            </field>
        </record>
        <!-- inherit surat jalan -->

    </data>
</odoo>