<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!-- Task Progress -->
		<record model="ir.ui.view" id="purchase_spk_view_form">
			<field name="name">purchase.spk.form</field>
			<field name="model">purchase.spk</field>
			<field name="arch" type="xml">
				<form string="Progress">
					<sheet>
						<div class="oe_title">
							<h1 class="o_row">
								<field name="name" placeholder="Work Summary..." />
							</h1>
						</div>
						<group>
							<group>
								<field name="task_id" />
								<field name="progress_unit" />
								<field name="progress_day" />
							</group>
							<group>
								<field name="date" />
								<field name="user_id" />
							</group>
							<group>
								<field name="progress_expected" widget="progressbar" />
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="purchase_spk_view_tree">
			<field name="name">purchase.spk.tree</field>
			<field name="model">purchase.spk</field>
			<field name="arch" type="xml">
				<tree string="Progress">
					<field name="name" />
					<field name="task_id" />
					<field name="progress_unit" />
					<field name="progress_day" />
					<field name="date" />
					<field name="user_id" />
				</tree>
			</field>
		</record>

		<record id="purchase_spk_action" model="ir.actions.act_window">
			<field name="name">Task Progress</field>
			<field name="res_model">purchase.spk</field>
			<field name="view_mode">tree,form</field>
			<field name="view_type">form</field>
		</record>
		<menuitem name="Task Progress" id="purchase_spk_menu"
			parent="project.menu_project_management" action="purchase_spk_action"
			sequence="20" />
	</data>
</odoo>
