<odoo>
    <data>
    	<record model="ir.ui.view" id="purchase_order_form_totalindo">
    		<field name="name">purchase_order.form.totalindo</field>
    		<field name="model">purchase.order</field>
    		<field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
            	<field name="date_order" position="after">
            		<field name="task_id"/>
            		<field name="department_id"/>
            		<field name="contact_person"/>
            	</field>
            </field>
    	</record>
        <record model="ir.ui.view" id="purchase_orderline_form_totalindo">
            <field name="name">purchase_orderline.form.totalindo</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                    <field name="spb_id"/>
                </xpath>
            </field>
        </record>     	
    </data>
</odoo>