<odoo>
    <data>
        <record id="view_purchase_configuration_inherit" model="ir.ui.view">
            <field name="name">purchase.res.config.view.inherit</field>
            <field name="model">purchase.config.settings</field>
            <field name="inherit_id" ref="purchase.view_purchase_configuration" />
            <field name="arch" type="xml">
                <xpath expr="//form/group/group/field[@name='po_double_validation']" position="replace">
                    <field name="po_double_validation" widget="radio"/>
                </xpath>
                <xpath expr="//form/group/group/field[@name='po_double_validation_amount']" position="after">
                    <field name="po_third_validation_amount" attrs="{'invisible': [('po_double_validation', '!=', 'three_step')]}"/>
                </xpath>
            </field>
        </record>     
    </data>
</odoo>