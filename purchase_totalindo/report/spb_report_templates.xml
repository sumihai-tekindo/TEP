<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_spb_document">
    <t t-call="report.external_layout">
        <!-- <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/> -->
        <div class="page">
            <div class="oe_structure"/>
            
            <div class="row" border="1">
                <div class="col-xs-3">
                    <img style="width:80%" t-if="res_company.logo" t-att-src="'data:image/png;base64,%s' %res_company.logo"/>
                </div>
                <div class="col-xs-5">
                    <h2 class="text-center">Surat Permintaan Barang / Jasa</h2>
                </div>
                <div class="col-xs-4">
                    <div class="row" style="padding-left:40px">
                        <div class="col-xs-3"><strong>No</strong></div><div class="col-xs-9">: <span t-field="o.name"></span></div>
                    </div>
                    <div class="row" style="padding-left:40px">
                        <div class="col-xs-3"><strong>Tanggal</strong></div><div class="col-xs-9">: <span t-field="o.tanggal_spb"></span></div>
                    </div>
                </div>
            </div>

            <hr style="border-width: 2px; border-color: black;"/>

            <div class="row">
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-xs-5"><strong>Project</strong></div><div class="col-xs-7">: <span t-field="o.proyek_id"/></div>
                    </div>
                    <div class="row">
                        <div class="col-xs-5"><strong>Department</strong></div><div class="col-xs-7">: <span t-field="o.departemen_id"/></div>
                    </div>
                     <div class="row">
                        <div class="col-xs-5"><strong>Tanggal Diperlukan</strong></div><div class="col-xs-7">: <span t-field="o.tanggal_diperlukan"/></div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-xs-5"><strong>Budgeted</strong></div><div class="col-xs-7">: <span t-field="o.budgeted"/></div>
                    </div>
                    <div class="row">
                        <div class="col-xs-5"><strong>Sifat Kebutuhan</strong></div><div class="col-xs-7">: <span t-field="o.sifat_kebutuhan"/></div>
                    </div>
                </div>
            </div>
            
            <br/><br/>

            <table class="table table-condensed" border="1">
                <thead>
                    <tr>
                        <th><strong>No</strong></th>
                        <th><strong>Product</strong></th>
                        <th><strong>Description</strong></th>
                        <th class="text-right"><strong>Jumlah Permintaan</strong></th>
                        <th class="text-center"><strong>Satuan</strong></th>
                        <th><strong>Keterangan</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.spb_line_ids" t-as="line">
                        <td>
                            <span t-esc="line_index+1"/>
                        </td>
                        <td>
                            <span t-field="line.product_id"/>
                        </td>
                        <td>
                            <span t-field="line.name"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.jumlah_permintaan"/>
                        </td>
                        <td class="text-center">
                            <span t-field="line.satuan"/>
                        </td>
                        <td>
                        </td>
                    </tr>
                </tbody>
            </table>

            <br/><br/>

            <div class="row">
                <div class="col-xs-4">
                    <center><span class="text-center">DIMINTA OLEH</span></center>
                    <br/><br/><br/>
                    <center><strong class="text-center" t-field="o.create_uid.name"/></center>
                </div>
                <div class="col-xs-4">
                    <center><span class="text-center">DIPERIKSA OLEH</span></center>
                    <br/><br/><br/>
                    <center><strong class="text-center">Quantity Surveyor</strong></center>
                </div>
                <div class="col-xs-4">
                    <center><span class="text-center">DISETUJUI OLEH</span></center>
                    <br/><br/><br/>
                    <center><strong class="text-center">Project Manager</strong></center>
                </div>
            </div>

            <div class="oe_structure"/>
        </div>
    </t>
</template>

<template id="report_spb">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="purchase_totalindo.report_spb_document"/>
        </t>
    </t>
</template>
</odoo>
